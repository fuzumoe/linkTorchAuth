{
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": "../",
    "testRegex": ".*\\.unit\\.spec\\.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": ["**/*.(t|j)s"],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
        "^@authz/(.*)$": "<rootDir>/src/$1"
    },
    "maxWorkers": "50%",
    "forceExit": true,
    "detectOpenHandles": true
}
